@model WeatherForecast.Data.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Forecast | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://icons.iconarchive.com/icons/treetog/i/256/Documents-icon.png" type="image/png" sizes="16x16">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <!-- Theme style -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/adminlte/plugins/loginPage/css/loginPage.css">

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <!-- toaster -->
    <link rel="stylesheet" href="~/adminlte/plugins/toastr/Toastr.css">
</head>
<body class="hold-transition login-page">
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form action="/Auth/Login" method="post">
        <h3>Kemal Forecast</h3>
        @* <p class="login-box-msg" style="color:red;">@TempData["error"]</p> *@
        <partial name="_Notification"></partial>


        <label for="email">Email</label>
        <div class="form-group has-feedback col">
            <input asp-for="UserEmail" class="form-control" placeholder="Email" />
            <span asp-validation-for="UserEmail" class="text-danger"></span> 
        </div>
        <label for="password">Password</label>
        <div class="form-group has-feedback col">
            <input type="password" asp-for="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="password" class="text-danger"></span> 
        </div>

        <div class="social">
            <a style="font-weight:600" href="~/Auth/Signup">Sign up</a>
        </div>
        <button>Log In</button>
    </form>
    <!-- /.login-box -->
    <!-- jQuery -->
    <!-- Bootstrap 4 -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/plugins/toastr/jquery.Toaster.js"></script>
    <script src="~/adminlte/dist/js/adminlte.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>

