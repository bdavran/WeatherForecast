<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Forecast | Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="icon" href="https://icons.iconarchive.com/icons/treetog/i/256/Documents-icon.png" type="image/png" sizes="16x16">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">  
    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <!-- toaster -->
    <link rel="stylesheet" href="~/adminlte/plugins/toastr/Toastr.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- Bootstrap 5 -->
    @* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"> *@
</head>
<body class="hold-transition sidebar-mini" id="container">
    <div>
        <div class="wrapper">

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-dark border-bottom" style="background: linear-gradient(-225deg, #3D4E81 0%, #5753C9 48%, #6E7FF3 100%) !important;">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" class="nav-link">Home</a>
                    </li>

                </ul>



                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Logout">
                            <img src="~/images/logout.png" />
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->
            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-light-secondary elevation-4" style="background-color:#E1EBEE !important;">
                <!-- Brand Logo -->
                <a href="~/Weather/Index" class="brand-link">
                    <img src="https://icons.iconarchive.com/icons/onkz-creative/winter-flat/256/Mountain-icon.png" style="height:50px;width:50px;" />

                    <span class="brand-text font-weight-light">Forecast</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/images/Avatar.png" alt="User Avatar" class="img-size-50 img-circle mr-3">

                        </div>
                        <div class="info">
                            <a href="#" class="d-block">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <p> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                                }
                            </a>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <img src="https://icons.iconarchive.com/icons/hamzasaleem/stock-apps-style-2-part-2/256/Settings-icon.png" style="height:40px;width:40px;" />
                                        <p>
                                            Configuration Section
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">



                                        <li class="nav-item">
                                            <a href="/User/Create" class="nav-link">
                                                <img src="https://icons.iconarchive.com/icons/oxygen-icons.org/oxygen/256/Actions-user-group-new-icon.png" style="height:40px;width:40px;"/>
                                                <p>Create User</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/User/Index" class="nav-link">
                                                <img src="https://icons.iconarchive.com/icons/hopstarter/sleek-xp-basic/256/User-Group-icon.png" style="height:40px;width:40px;" />
                                                <p>Manage Users</p>
                                            </a>
                                        </li>


                                    </ul>
                                </li>
                            }
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <img src="https://icons.iconarchive.com/icons/treetog/junior/256/folder-documents-icon.png" style="height:40px;width:40px;" />
                                    <p>
                                        Forecast Section
                                        <i class="fa fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="~/Weather/Index" class="nav-link">
                                            <img src="https://icons.iconarchive.com/icons/iconka/magic-weather/256/fog-icon.png" style="height:40px;width:40px;" />
                                            <p>View Forecast</p>
                                        </a>
                                    </li>

                                </ul>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper" style="background:#fff;">
                <div class="pad" style="padding:5%;">
                    <partial name="_Notification"></partial>
                    @RenderBody()
                </div>
            </div>
            <!-- /.content-wrapper -->
            @* <footer class="main-footer">
            </footer> *@

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
        </div>
        <!-- ./wrapper -->
        <!-- jQuery -->
        @RenderSection("scripts", required: false)
        <!-- Bootstrap Bundle with Popper -->
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/adminlte/plugins/sparkline/jquery.sparkline.min.js"></script>
        <script src="~/adminlte/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        <script src="~/adminlte/plugins/knob/jquery.knob.js"></script>
        <script src="~/adminlte/plugins/slimScroll/jquery.slimscroll.min.js"></script>
        <script src="~/adminlte/dist/js/adminlte.js"></script> 
        <script src="~/adminlte/plugins/toastr/jquery.Toaster.js"></script>
    </div>
</body>
</html>
